<!DOCTYPE html>
<html lang="en">

<head>
    <title>Sửa sản phẩm</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <div class="container mt-3">
        <h3>Sửa sản phẩm</h3>

        <form id="productForm" class="was-validated" enctype="multipart/form-data">
            <div class="mb-3 mt-3">
                <label for="productId" class="form-label">ID Sản phẩm:</label>
                <input type="text" class="form-control" id="productId" placeholder="ID Sản phẩm" name="productId"
                    readonly>
            </div>

            <div class="mb-3">
                <label for="tentruyen" class="form-label">Tên truyện:</label>
                <input type="text" class="form-control" id="tentruyen" placeholder="Nhập tên truyện" name="tentruyen"
                    required>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Vui lòng nhập vào.</div>
            </div>

            <div class="mb-3">
                <label for="motangan" class="form-label">Mô tả ngắn:</label>
                <input type="text" class="form-control" id="motangan" placeholder="Nhập mô tả ngắn" name="motangan"
                    required>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Vui lòng nhập vào.</div>
            </div>

            <div class="mb-3">
                <label for="tentacgia" class="form-label">Tên tác giả:</label>
                <input type="text" class="form-control" id="tentacgia" placeholder="Nhập tên tác giả" name="tentacgia"
                    required>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Vui lòng nhập vào.</div>
            </div>

            <div class="mb-3">
                <label for="namxuatban" class="form-label">Năm xuất bản:</label>
                <input type="text" class="form-control" id="namxuatban" placeholder="Nhập năm xuất bản"
                    name="namxuatban" required>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Vui lòng nhập vào.</div>
            </div>

            <div class="mb-3">
                <label for="anhbia" class="form-label">Ảnh bìa:</label>
                <input type="file" class="form-control" id="anhbia" name="anhbia" accept="image/*">
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Vui lòng chọn một ảnh bìa.</div>
            </div>

            <div class="mb-3">
                <label for="danhsachcacanhnoidungtruyen" class="form-label">Danh sách ảnh nội dung truyện:</label>
                <input type="file" class="form-control" id="danhsachcacanhnoidungtruyen"
                    name="danhsachcacanhnoidungtruyen" accept=".pdf" multiple>
                <div class="valid-feedback">Valid.</div>
                <div class="invalid-feedback">Vui lòng chọn ít nhất một ảnh.</div>
            </div>

            <button type="button" class="btn btn-primary" onclick="updateProduct()">Cập nhật</button>
        </form>
    </div>

    <script>
        // Hàm để hiển thị thông tin sản phẩm ban đầu và gửi dữ liệu cập nhật lên máy chủ khi người dùng nhấn nút "Cập nhật"
        function updateProduct() {
            const formData = new FormData();
            formData.append('productId', document.getElementById("productId").value);
            formData.append('tentruyen', document.getElementById("tentruyen").value);
            formData.append('motangan', document.getElementById("motangan").value);
            formData.append('tentacgia', document.getElementById("tentacgia").value);
            formData.append('namxuatban', document.getElementById("namxuatban").value);
            formData.append('anhbia', document.getElementById("anhbia").files[0]);

            // Lấy danh sách tệp đã chọn
            const danhsachcacanhnoidungtruyenFiles = document.getElementById("danhsachcacanhnoidungtruyen").files;

            // Lặp qua danh sách và thêm vào formData
            for (const file of danhsachcacanhnoidungtruyenFiles) {
                formData.append('danhsachcacanhnoidungtruyen', file);
            }

            // Gọi API để cập nhật sản phẩm
            fetch('/product/update/' + document.getElementById("productId").value, {
                method: 'PUT',
                body: formData,
            })
                .then(response => response.json())
                .then(data => {
                    console.log(data);
                    if (data.message === "Cập nhật sản phẩm thành công") {
                        alert("Cập nhật sản phẩm thành công!");

                        window.location.href = "/listProductScreen"; // Đường dẫn đến trang đăng nhập
                    } else {
                        alert("Cập nhật sản phẩm không thành công!");
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    // Xử lý lỗi khi gửi yêu cầu
                });
        }

        // Hàm để lấy thông tin sản phẩm và hiển thị trên trang khi trang được tải
        document.addEventListener("DOMContentLoaded", function () {
            // Lấy ID sản phẩm từ sessionStorage
            // Lấy ID sản phẩm từ sessionStorage
            const editedProductId = sessionStorage.getItem('editedProductId');
            // Điền giá trị ID vào trường nhập
            document.getElementById("productId").value = editedProductId;


        });
    </script>
</body>

</html>